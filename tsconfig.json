{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "build" ,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2018"],
    "inlineSourceMap": true,
    "inlineSources": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["lib", "src", "test"]
}
